<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>HackYourTemperature</title>
  </head>
  <body style='display:flex; justify-content:center; align-items:center; '>
    <h1
      class='mx-auto col-lg-6 border-bottom border-secondary mb-2 p-2 text-muted'
    >{{cityName}}
      {{weatherText}}
      <span>&#8451;</span>
      <img src='{{iconUrl}}' alt='{{cityName}}' /></h1>
    <div class='row card col-lg-6 mx-auto'>
      <form class='form-group mt-2' action='/weather' method='post'>
        <input
          class='form-control'
          type='text'
          name='cityName'
          placeholder='Enter a city name'
          required
        />
        <input
          class='btn btn-primary btn-block mt-2'
          value='Search City'
          type='submit'
        />
      </form>
      <div class='col-lg-12 col-md-12'>
        <p class='border border-primary p-1 text-primary'>Description:
          {{description}}</p>
        <p class='border border-danger text-danger p-1'>Coordinates:
          {{coord}}

        </p>
      </div>
    </div>
  </body>
</html>